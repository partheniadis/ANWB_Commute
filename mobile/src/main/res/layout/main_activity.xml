<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
    <ListView
        android:id="@+id/data_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:transcriptMode="alwaysScroll" />
    <Button
    android:id="@+id/start_wearable_activity"
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:layout_gravity="center"
        android:layout_margin="10dp"
    android:enabled="false"
    android:onClick="onStartWearableActivityClick"
    android:text="@string/start_wearable_activity" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">


            <Button
                android:id="@+id/stage0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:onClick="onSendStage"
                android:text="Stage 0: Choose Vehicle"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/stage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:onClick="onSendStage"
                android:text="Stage 1: Commute Recognized CAR"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/stage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:onClick="onSendStage"
                android:text="STAGE 2: GLANCABLE MODE"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/stage3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:onClick="onSendStage"
                android:text="STAGE 3: SPEEDLIGHT WARNING"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/stage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:onClick="onSendStage"
                android:text="STAGE 4: ALTERNATIVE ROUTE"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/stage5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:onClick="onSendStage"
                android:text="STAGE 5: LOCATION SAVED CAR"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/stage10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:onClick="onSendStage"
                android:text="STAGE 10: SHOW LOCATION CAR"
                android:textColor="@android:color/white"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">


            <Button
                android:id="@+id/stage6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorAccent"
                android:onClick="onSendStage"
                android:text="STAGE 6: COMMUTE RECOGNIZED BIKE"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/stage7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorAccent"
                android:onClick="onSendStage"
                android:text="STAGE 7: Glance bike, no delay, eta"
                android:textColor="@android:color/white"
                android:textSize="12sp" />


            <Button
                android:id="@+id/stage8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorAccent"
                android:onClick="onSendStage"
                android:text="STAGE 8: Location saved bike "
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/stage9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorAccent"
                android:onClick="onSendStage"
                android:text="STAGE 9: Location saved bike "
                android:textColor="@android:color/white"
                android:textSize="12sp" />


            <Button
                android:id="@+id/stage11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorAccent"
                android:onClick="onSendStage"
                android:text="STAGE 10: SHOW LocATION BIKE"
                android:textColor="@android:color/white"
                android:textSize="12sp" />


        </LinearLayout>
</LinearLayout>
</LinearLayout>